---
import { Button } from "@/components/starwind/button";
import { ButtonGroup } from "@/components/starwind/button-group";

interface Props {
  title?: string;
}

const { title = "Ready to get started?" } = Astro.props;
---

<section id="cta" class="border-y border-border bg-muted/30 py-20">
  <div class="container mx-auto px-4 text-center">
    <h2 class="mb-8 text-3xl font-bold tracking-tight text-foreground">
      {title}
    </h2>
    <div class="flex flex-wrap justify-center gap-4">
      <ButtonGroup>
        <Button variant="primary" href="#contact">Contact Sales</Button>
        <Button variant="outline" href="/docs">View Docs</Button>
      </ButtonGroup>
    </div>
  </div>
</section>
