---
import {
  Card,
  CardDescription,
  CardHeader,
  CardTitle,
} from "@/components/starwind/card";

interface InfoBox {
  title: string;
  description: string;
}

interface Props {
  title?: string;
  boxes?: InfoBox[];
}

const {
  title = "Why Choose Us",
  boxes = [
    {
      title: "Fast",
      description: "Astro ships zero JavaScript by default. Your site loads instantly.",
    },
    {
      title: "Flexible",
      description: "Use any UI framework or build with components. Your choice.",
    },
    {
      title: "Modern",
      description: "Built on Tailwind CSS v4 and the latest web standards.",
    },
  ],
} = Astro.props;
---

<section id="features" class="border-b border-border bg-muted/30 py-20">
  <div class="container mx-auto px-4">
    <h2 class="mb-12 text-center text-3xl font-bold tracking-tight text-foreground">
      {title}
    </h2>
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {boxes.map((box) => (
        <Card class="border-border bg-card">
          <CardHeader>
            <CardTitle>{box.title}</CardTitle>
            <CardDescription>{box.description}</CardDescription>
          </CardHeader>
        </Card>
      ))}
    </div>
  </div>
</section>
